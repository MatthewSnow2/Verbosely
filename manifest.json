{
  "manifest_version": 3,
  "name": "Skool Community Quality Detector",
  "version": "1.0.0",
  "description": "Analyzes Skool community member behavior to detect automation patterns and assess content quality",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*.skool.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.skool.com/*"],
      "js": [
        "utils/constants.js",
        "utils/storage.js",
        "utils/analyzer.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Skool Quality Detector",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/content.css", "icons/*.png"],
      "matches": ["https://*.skool.com/*"]
    }
  ]
}